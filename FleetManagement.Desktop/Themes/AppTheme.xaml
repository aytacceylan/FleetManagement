<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ====== RENKLER (Lacivert + yüksek kontrast) ====== -->
    <Color x:Key="FmNavy900">#0B1B3A</Color>
    <Color x:Key="FmNavy800">#122B57</Color>
    <Color x:Key="FmNavy700">#193B74</Color>
    <Color x:Key="FmBorder">#243E70</Color>
    <Color x:Key="FmSurface">#FFFFFF</Color>
    <Color x:Key="FmBg">#F3F5F9</Color>
    <Color x:Key="FmText">#0B1B3A</Color>
    <Color x:Key="FmMuted">#5A6B86</Color>

    <SolidColorBrush x:Key="BrushNavy900" Color="{StaticResource FmNavy900}"/>
    <SolidColorBrush x:Key="BrushNavy800" Color="{StaticResource FmNavy800}"/>
    <SolidColorBrush x:Key="BrushNavy700" Color="{StaticResource FmNavy700}"/>
    <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource FmBorder}"/>
    <SolidColorBrush x:Key="BrushSurface" Color="{StaticResource FmSurface}"/>
    <SolidColorBrush x:Key="BrushBg" Color="{StaticResource FmBg}"/>
    <SolidColorBrush x:Key="BrushText" Color="{StaticResource FmText}"/>
    <SolidColorBrush x:Key="BrushMuted" Color="{StaticResource FmMuted}"/>

    <!-- ====== GLOBAL TEXT ====== -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
    </Style>

    <!-- ====== CARD / PANEL (sayfalarda tek tip) ====== -->
    <Style x:Key="FmCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BrushSurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="14"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- ====== BUTTON ====== -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource BrushNavy800}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,9"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BrushNavy700}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource BrushNavy900}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ====== TEXTBOX ====== -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Background" Value="{StaticResource BrushSurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ====== COMBOBOX (kontrast + modern) ====== -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Background" Value="{StaticResource BrushSurface}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource BrushText}"/>
        <Setter Property="Padding" Value="10,8"/>
    </Style>

    <!-- ====== DATAGRID (okunaklı) ====== -->
    <Style TargetType="DataGrid">
        <Setter Property="RowBackground" Value="{StaticResource BrushSurface}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource BrushBg}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

</ResourceDictionary>