<Page x:Class="FleetManagement.Desktop.Pages.VehiclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Araçlar" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Araç kayıtlarını görüntüleyin ve yönetin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Yenile"
                        MinWidth="120"
                        Click="Refresh_Click"/>

                <Button Grid.Column="3"
                        Content="Yeni Araç"
                        MinWidth="140"
                        Click="New_Click"/>
            </Grid>
        </Border>

        <!-- LIST -->
        <Border Grid.Row="2" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchPlateBox"
                             Grid.Column="0"
                            
                             TextChanged="SearchPlateBox_TextChanged"/>

                    <ComboBox x:Name="StatusCombo"
                              Grid.Column="2"
                              SelectionChanged="StatusCombo_SelectionChanged">
                        <ComboBoxItem Content="Tümü" IsSelected="True"/>
                        <ComboBoxItem Content="Aktif"/>
                        <ComboBoxItem Content="Pasif"/>
                    </ComboBox>

                    <TextBlock Grid.Column="4"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushMuted}"
                               Text="İpucu: Satır seçerek düzenleme/silme ekleyeceğiz."/>
                </Grid>

                <DataGrid x:Name="VehiclesGrid"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                        <DataGridTextColumn Header="Plaka" Binding="{Binding Plate}" Width="*"/>
                        <DataGridTextColumn Header="Araç Tipi" Binding="{Binding VehicleType}" Width="*"/>
                        <DataGridTextColumn Header="Model" Binding="{Binding ModelName}" Width="*"/>
                        <DataGridTextColumn Header="Kategori" Binding="{Binding CategoryName}" Width="*"/>
                        <DataGridTextColumn Header="Durum" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>