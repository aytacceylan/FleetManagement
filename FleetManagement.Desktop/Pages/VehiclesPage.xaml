<Page x:Class="FleetManagement.Desktop.Pages.VehiclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Page.Resources>
        <!-- TEST: Bu style kesin uygulanmalı -->
        <Style x:Key="ForceComboBoxStyle" TargetType="ComboBox" BasedOn="{x:Null}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#122B57"/>
            <Setter Property="BorderBrush" Value="#243E70"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ForceComboBoxItemStyle" TargetType="ComboBoxItem" BasedOn="{x:Null}">
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#122B57"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#122B57"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Araçlar"
                               FontSize="22"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Araç kayıtlarını görüntüleyin ve yönetin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Yenile"
                        MinWidth="120"
                        Click="Refresh_Click"/>

                <Button Grid.Column="3"
                        Content="Yeni Araç"
                        MinWidth="150"
                        Click="New_Click"/>
            </Grid>
        </Border>

        <!-- ================= FORM ================= -->
        <Border Grid.Row="2" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- FORM HEADER -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Araç Formu"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Kaydet"
                            Width="110"
                            Click="Save_Click"/>

                    <Button Grid.Column="3"
                            Content="Sil"
                            Width="110"
                            Click="Delete_Click"/>

                    <Button Grid.Column="5"
                            Content="Temizle"
                            Width="110"
                            Click="Clear_Click"/>
                </Grid>

                <!-- FORM CONTENT -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 1. Kolon -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Plaka"
                                       Foreground="{StaticResource BrushMuted}"
                                       Margin="0,8,0,0"/>
                            <TextBox x:Name="PlateBox"
                                     Margin="0,6,0,10"
                                     LostFocus="PlateBox_LostFocus"/>

                            <TextBlock Text="Sivil Plaka"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="InventoryNumberBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Sürücü"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <ComboBox x:Name="AssignedDriverCombo"
                                         Margin="0,6,0,10"
                                         IsEditable="True"
                                         IsReadOnly="True"
                                         Foreground="Black"
                                         Background="#3D5869"
                                         BorderBrush="Black">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <!-- Normal liste -->
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="black"/>

                                        <Style.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>

                                            <!-- Seçili -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                            </ComboBox>

                            <TextBlock Text="Birlik/Bölük"
           Foreground="{StaticResource BrushMuted}"/>

                            <ComboBox x:Name="UnitCombo"
                                         Margin="0,6,0,10"
                                         IsEditable="True"
                                         IsReadOnly="True"
                                         Foreground="Black"
                                         Background="#3D5869"
                                         BorderBrush="Black">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <!-- Normal liste -->
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="black"/>

                                        <Style.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>

                                            <!-- Seçili -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                            </ComboBox>


                        </StackPanel>

                        <!-- 2. Kolon -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Araç Tipi"
                                       Foreground="{StaticResource BrushMuted}"
                                       Margin="0,8,0,0"/>
                            <ComboBox x:Name="VehicleTypeCombo"
                                      Margin="0,6,0,10"/>

                            <TextBlock Text="Marka"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="BrandBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Model"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <ComboBox x:Name="ModelCombo"
                                         Margin="0,6,0,10"
                                         IsEditable="True"
                                         IsReadOnly="True"
                                         Foreground="Black"
                                         Background="#3D5869"
                                         BorderBrush="Black">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem">
                                        <!-- Normal liste -->
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="black"/>

                                        <Style.Triggers>
                                            <!-- Hover -->
                                            <Trigger Property="IsHighlighted" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>

                                            <!-- Seçili -->
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Black"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                            </ComboBox>

                            <TextBlock Text="Araç Yılı"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="VehicleYearBox"
                                     Margin="0,6,0,10"/>
                        </StackPanel>

                        <!-- 3. Kolon -->
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Araç Km"
                                       Foreground="{StaticResource BrushMuted}"
                                       Margin="0,8,0,0"/>
                            <TextBox x:Name="VehicleKmBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Yolcu Kapasitesi"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="PassengerCapacityBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Yük Kapasitesi"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="LoadCapacityBox"
                                     Margin="0,6,0,10"/>
                        </StackPanel>

                        <!-- 4. Kolon -->
                        <StackPanel Grid.Column="6">
                            <TextBlock Text="Motor No"
                                       Foreground="{StaticResource BrushMuted}"
                                       Margin="0,8,0,0"/>
                            <TextBox x:Name="MotorNoBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Şase No"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="SaseNoBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Görev"
                                       Foreground="{StaticResource BrushMuted}"/>

                            <TextBox x:Name="DutyInfoBox"
         Margin="0,6,0,10"
         IsReadOnly="True"
         Text="—"
         Padding="10,6"
         Background="#F6F8FC"
         BorderBrush="#D6DDEB"
         BorderThickness="1"/>

                            <TextBlock Text="Bakım"
                                       Foreground="{StaticResource BrushMuted}"/>

                            <TextBox x:Name="MaintInfoBox"
         Margin="0,6,0,0"
         IsReadOnly="True"
         Text="—"
         Padding="10,6"
         Background="#F6F8FC"
         BorderBrush="#D6DDEB"
         BorderThickness="1"/>
                        </StackPanel>

                        <!-- 5. Kolon -->
                        <StackPanel Grid.Column="8">
                            <TextBlock Text="Son Bakım Km"
                                       Foreground="{StaticResource BrushMuted}"
                                       Margin="0,8,0,0"/>
                            <TextBox x:Name="LastMaintenanceKmBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Son Bakım Tarihi"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <DatePicker x:Name="LastMaintenanceDatePicker"
                                        Margin="0,6,0,10"/>

                            <TextBlock Text="Bakım Periyodu (Km)"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="MaintenanceIntervalKmBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock Text="Bakım Periyodu (Ay)"
                                       Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="MaintenanceIntervalMonthsBox"
                                     Margin="0,6,0,10"/>

                            <TextBlock x:Name="FormInfo"
                                       Margin="0,6,0,0"
                                       Foreground="{StaticResource BrushMuted}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ================= LIST ================= -->
        <Border Grid.Row="4" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Araç Listesi"
                           FontSize="16"
                           FontWeight="SemiBold"/>

                <DataGrid Grid.Row="2"
                          x:Name="VehiclesGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="VehiclesGrid_SelectionChanged">

                    <DataGrid.Columns>

                        <!-- 1. kolon -->
                        <DataGridTextColumn Header="Plaka" Binding="{Binding Plate}" Width="95"/>
                        <DataGridTextColumn Header="Sivil" Binding="{Binding InventoryNumber}" Width="105"/>
                        <DataGridTextColumn Header="Sürücü" Binding="{Binding DriverFullName}" Width="150"/>
                        <DataGridTextColumn Header="Birlik" Binding="{Binding VehicleUnit}" Width="130"/>

                        <!-- 2. kolon -->
                        <DataGridTextColumn Header="Tip" Binding="{Binding VehicleType}" Width="95"/>
                        <DataGridTextColumn Header="Marka" Binding="{Binding Brand}" Width="90"/>
                        <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="105"/>
                        <DataGridTextColumn Header="Yıl" Binding="{Binding VehicleYear}" Width="60"/>

                        <!-- 3. kolon -->
                        <DataGridTextColumn Header="Km" Binding="{Binding VehicleKm}" Width="70"/>
                        <DataGridTextColumn Header="Yolcu" Binding="{Binding PassengerCapacity}" Width="60"/>
                        <DataGridTextColumn Header="Yük" Binding="{Binding LoadCapacity}" Width="60"/>

                        <!-- 4. kolon -->
                        <DataGridTextColumn Header="Motor" Binding="{Binding MotorNo}" Width="110"/>
                        <DataGridTextColumn Header="Şase" Binding="{Binding SaseNo}" Width="120"/>
                        <DataGridTextColumn Header="Görev" Binding="{Binding DutyStatus}" Width="80"/>

                        <DataGridTemplateColumn Header="Bakım" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MaintenanceStatus}"
                       Foreground="{Binding MaintenanceBrush}"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- 5. kolon -->
                        <DataGridTextColumn Header="Son Km" Binding="{Binding LastMaintenanceKm}" Width="75"/>
                        <DataGridTextColumn Header="Son Tarih"
                                            Binding="{Binding LastMaintenanceDate, StringFormat={}{0:yyyy-MM-dd}}"
                                            Width="105"/>
                        <DataGridTextColumn Header="Periyot Km" Binding="{Binding MaintenanceIntervalKm}" Width="75"/>
                        <DataGridTextColumn Header="Periyot Ay" Binding="{Binding MaintenanceIntervalMonths}" Width="75"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

    </Grid>
</Page>