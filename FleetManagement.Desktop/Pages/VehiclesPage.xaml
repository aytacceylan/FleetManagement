<Page x:Class="FleetManagement.Desktop.Pages.VehiclesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Araçlar" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Araç kayıtlarını yönetin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Yenile" MinWidth="120" Click="Refresh_Click"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FORM -->
            <Border Grid.Column="0" Style="{StaticResource FmCard}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <TextBlock Text="Araç Formu" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock Text="Yeni / Güncelle / Sil"
                       Margin="0,6,0,16"
                       Foreground="{StaticResource BrushMuted}"/>

                        <!-- 1) Plaka -->
                        <TextBlock Text="Plaka" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="PlateBox" Margin="0,6,0,12"/>

                        <!-- 2) Sivil Plaka -->
                        <TextBlock Text="Sivil Plaka" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="InventoryNumberBox" Margin="0,6,0,12"/>

                        <!-- 3) Sürücü (Bilgi) -->
                        <TextBlock Text="Sürücü (Bilgi)" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="DriverNameBox" Margin="0,6,0,12" IsReadOnly="True"/>

                        <TextBlock Text="Atanan Sürücü" Foreground="{StaticResource BrushMuted}"/>
                        <ComboBox x:Name="AssignedDriverCombo"
                                      Margin="0,6,0,12"
                                      DisplayMemberPath="FullName"
                                      SelectedValuePath="Id"/>
                        
                        <!-- 4) Araç Tipi -->
                        <TextBlock Text="Araç Tipi" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="VehicleTypeBox" Margin="0,6,0,12"/>

                        <!-- 5) Kategori -->
                        <TextBlock Text="Kategori" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="VehicleCategoryBox" Margin="0,6,0,12"/>

                        <!-- 6) Model -->
                        <TextBlock Text="Model" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="ModelBox" Margin="0,6,0,12"/>

                        <!-- 7) Motor No -->
                        <TextBlock Text="Motor No" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="MotorNoBox" Margin="0,6,0,12"/>

                        <!-- 8) Şase No -->
                        <TextBlock Text="Şase No" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="SaseNoBox" Margin="0,6,0,12"/>

                        <!-- Diğer detaylar -->
                        <TextBlock Text="Marka" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="BrandBox" Margin="0,6,0,12"/>

                        <TextBlock Text="Birlik/Bölük-Kısım" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="VehicleUnitBox" Margin="0,6,0,12"/>

                        <TextBlock Text="Araç KM" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="VehicleKmBox" Margin="0,6,0,12"/>

                        <TextBlock Text="Yolcu Kapasitesi" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="PassengerCapacityBox" Margin="0,6,0,12"/>

                        <TextBlock Text="Yük Kapasitesi" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="LoadCapacityBox" Margin="0,6,0,12"/>

                        <TextBlock Text="Araç Durumu" Foreground="{StaticResource BrushMuted}"/>
                        <TextBox x:Name="VehicleSituationBox" Margin="0,6,0,16"/>

                        <WrapPanel>
                            <Button Content="Kaydet" Width="110" Margin="0,0,10,10" Click="Save_Click"/>
                            <Button Content="Sil" Width="110" Margin="0,0,10,10" Click="Delete_Click"/>
                            <Button Content="Temizle" Width="110" Margin="0,0,10,10" Click="Clear_Click"/>
                        </WrapPanel>

                        <TextBlock x:Name="FormInfo"
                       Margin="0,8,0,0"
                       Foreground="{StaticResource BrushMuted}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- LIST -->
            <Border Grid.Column="2" Style="{StaticResource FmCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Araç Listesi"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>

                    <DataGrid x:Name="VehiclesGrid"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="VehiclesGrid_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Plaka" Binding="{Binding Plate}" Width="120"/>
                            <DataGridTextColumn Header="Sivil Plaka" Binding="{Binding InventoryNumber}" Width="140"/>
                            <DataGridTextColumn Header="Sürücü" Binding="{Binding DriverName}" Width="180"/>
                            <DataGridTextColumn Header="Tip" Binding="{Binding VehicleType}" Width="*"/>
                            <DataGridTextColumn Header="Kategori" Binding="{Binding VehicleCategory}" Width="*"/>
                            <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*"/>
                            <DataGridTextColumn Header="Motor No" Binding="{Binding MotorNo}" Width="140"/>
                            <DataGridTextColumn Header="Şase No" Binding="{Binding SaseNo}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>