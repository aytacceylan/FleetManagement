<Page x:Class="FleetManagement.Desktop.Pages.DriversPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Sürücüler" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Sürücü kayıtlarını görüntüleyin ve yönetin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Yenile"
                        MinWidth="120"
                        Click="Refresh_Click"/>

                <Button Grid.Column="3"
                        Content="Yeni Sürücü"
                        MinWidth="150"
                        Click="New_Click"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FORM -->
            <Border Grid.Column="0" Style="{StaticResource FmCard}">
                <StackPanel>

                    <TextBlock Text="Sürücü Formu" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="Yeni / Güncelle / Sil"
                               Margin="0,6,0,16"
                               Foreground="{StaticResource BrushMuted}"/>

                    <TextBlock Text="Sürücü No" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="DriverNumberBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Ad Soyad" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="FullNameBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Telefon" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="PhoneBox" Margin="0,6,0,16"/>

                    <WrapPanel>
                        <Button Content="Kaydet" Width="110" Margin="0,0,10,10" Click="Save_Click"/>
                        <Button Content="Sil" Width="110" Margin="0,0,10,10" Click="Delete_Click"/>
                        <Button Content="Temizle" Width="110" Margin="0,0,10,10" Click="Clear_Click"/>
                    </WrapPanel>

                    <TextBlock x:Name="FormInfo"
                               Margin="0,8,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>
            </Border>

            <!-- LIST -->
            <Border Grid.Column="2" Style="{StaticResource FmCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Sürücü Listesi"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1">
                            <TextBox x:Name="SearchBox"
             TextChanged="SearchBox_TextChanged"/>

                            <TextBlock x:Name="FilterInfo"
               Margin="0,6,0,0"
               Foreground="{StaticResource BrushMuted}"
               FontSize="12"
               Text="Filtre: yok"/>
                        </StackPanel>

                    </Grid>

                    <DataGrid x:Name="DriversGrid"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="DriversGrid_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                            <DataGridTextColumn Header="Sürücü No" Binding="{Binding DriverNumber}" Width="*"/>
                            <DataGridTextColumn Header="Ad Soyad" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="*"/>
                            <DataGridTextColumn Header="Oluşturma" Binding="{Binding CreatedAt}" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>