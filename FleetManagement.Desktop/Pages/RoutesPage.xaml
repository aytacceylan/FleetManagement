<Page x:Class="FleetManagement.Desktop.Pages.RoutesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Rotalar" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Rota kayıtlarını görüntüleyin ve yönetin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Yenile"
                        MinWidth="120"
                        Click="Refresh_Click"/>

                <Button Grid.Column="3"
                        Content="Yeni Rota"
                        MinWidth="150"
                        Click="New_Click"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FORM -->
            <Border Grid.Column="0" Style="{StaticResource FmCard}">
                <StackPanel>

                    <TextBlock Text="Rota Formu" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="Yeni / Güncelle / Sil"
                               Margin="0,6,0,16"
                               Foreground="{StaticResource BrushMuted}"/>

                    <TextBlock Text="Rota Kodu" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="CodeBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Rota Adı" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="NameBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Başlangıç" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="StartBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Bitiş" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="EndBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Açıklama" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="DescBox" Margin="0,6,0,16" Height="70" AcceptsReturn="True"/>

                    <WrapPanel>
                        <Button Content="Kaydet" Width="110" Margin="0,0,10,10" Click="Save_Click"/>
                        <Button Content="Sil" Width="110" Margin="0,0,10,10" Click="Delete_Click"/>
                        <Button Content="Temizle" Width="110" Margin="0,0,10,10" Click="Clear_Click"/>
                    </WrapPanel>

                    <TextBlock x:Name="FormInfo"
                               Margin="0,8,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>
            </Border>

            <!-- LIST -->
            <Border Grid.Column="2" Style="{StaticResource FmCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="280"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Rota Listesi"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>

                    <DataGrid x:Name="RoutesGrid"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="RoutesGrid_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                            <DataGridTextColumn Header="Kod" Binding="{Binding Code}" Width="140"/>
                            <DataGridTextColumn Header="Rota Adı" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Başlangıç" Binding="{Binding StartPoint}" Width="*"/>
                            <DataGridTextColumn Header="Bitiş" Binding="{Binding EndPoint}" Width="*"/>
                            <DataGridTextColumn Header="Oluşturma" Binding="{Binding CreatedAt}" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>