<Page x:Class="FleetManagement.Desktop.Pages.VehicleMovementsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BrushBg}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Style="{StaticResource FmCard}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Araç Hareket" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Text="Araç hareket kayıtlarını oluşturun ve takip edin."
                               Margin="0,6,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Yenile"
                        MinWidth="120"
                        Click="RefreshMovements_Click"/>

                <Button Grid.Column="3"
                        Content="Kaydet"
                        MinWidth="140"
                        Click="SaveMovement_Click"/>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- FORM -->
            <Border Grid.Column="0" Style="{StaticResource FmCard}">
                <StackPanel>

                    <TextBlock Text="Hareket Formu" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="Araç seç, sürücü seç, tarih ve km bilgilerini gir."
                               Margin="0,6,0,16"
                               Foreground="{StaticResource BrushMuted}"/>

                    <TextBlock Text="Araç" Foreground="{StaticResource BrushMuted}"/>
                    <ComboBox x:Name="VehicleCombo" Margin="0,6,0,12"/>

                    <TextBlock Text="Sürücü" Foreground="{StaticResource BrushMuted}"/>
                    <ComboBox x:Name="DriverCombo" Margin="0,6,0,12"/>

                    <TextBlock Text="Araç Komutanı" Foreground="{StaticResource BrushMuted}"/>
                    <ComboBox x:Name="CommanderCombo" Margin="0,6,0,12"/>

                    <TextBlock Text="Çıkış Tarihi" Foreground="{StaticResource BrushMuted}"/>
                    <DatePicker x:Name="ExitDate" Margin="0,6,0,12"/>

                    <TextBlock Text="Dönüş Tarihi" Foreground="{StaticResource BrushMuted}"/>
                    <DatePicker x:Name="ReturnDate" Margin="0,6,0,12"/>

                    <TextBlock Text="Route" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="RouteBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Purpose" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="PurposeBox" Margin="0,6,0,12"/>

                    <TextBlock Text="Açıklama" Foreground="{StaticResource BrushMuted}"/>
                    <TextBox x:Name="DescBox" Margin="0,6,0,12" Height="70" TextWrapping="Wrap" AcceptsReturn="True"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Başlangıç KM" Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="StartKmBox" Margin="0,6,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Bitiş KM" Foreground="{StaticResource BrushMuted}"/>
                            <TextBox x:Name="EndKmBox" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="MovementInfo"
                               Margin="0,12,0,0"
                               Foreground="{StaticResource BrushMuted}"/>
                </StackPanel>
            </Border>

            <!-- LIST -->
            <Border Grid.Column="2" Style="{StaticResource FmCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Hareket Listesi"
                               FontSize="16"
                               FontWeight="SemiBold"/>

                    <DataGrid x:Name="MovementsGrid"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="70"/>
                            <DataGridTextColumn Header="Araç" Binding="{Binding VehicleDisplay}" Width="*"/>
                            <DataGridTextColumn Header="Sürücü" Binding="{Binding DriverDisplay}" Width="*"/>
                            <DataGridTextColumn Header="Çıkış" Binding="{Binding ExitDate}" Width="160"/>
                            <DataGridTextColumn Header="Dönüş" Binding="{Binding ReturnDate}" Width="160"/>
                            <DataGridTextColumn Header="Route" Binding="{Binding Route}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
