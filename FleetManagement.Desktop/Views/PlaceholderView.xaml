<Page x:Class="FleetManagement.Desktop.Views.PlaceholderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PlaceholderView">

    <Grid Margin="24">
        <StackPanel>
            <TextBlock Text="Bu sayfa henüz hazırlanmadı."
                       FontSize="22"
                       FontWeight="SemiBold" />
            <TextBlock x:Name="InfoText"
                       Margin="0,10,0,0"
                       FontSize="14"
                       Opacity="0.8"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>
