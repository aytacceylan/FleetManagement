<Page x:Class="FleetManagement.Desktop.Views.PlaceholderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="PlaceholderView"
      Background="White">

    <Grid Margin="24">
        <Border CornerRadius="14" Background="#F3F5F9" Padding="18">
            <StackPanel>
                <TextBlock Text="Hazırlanıyor"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#0B1B3A"/>
                <TextBlock x:Name="TitleText"
                           Margin="0,10,0,0"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#122B57"/>
                <TextBlock Margin="0,6,0,0"
                           FontSize="13"
                           Opacity="0.8"
                           TextWrapping="Wrap"
                           Text="Bu ekran bir sonraki sürümde aktif edilecektir. Menüler çalışır durumda; ekranlar sırayla eklenecek."/>
            </StackPanel>
        </Border>
    </Grid>
</Page>