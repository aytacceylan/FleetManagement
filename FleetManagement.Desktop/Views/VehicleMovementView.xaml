<UserControl x:Class="FleetManagement.Desktop.Views.VehicleMovementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FORM -->
        <Border Padding="12" Background="White" CornerRadius="8" Margin="0 0 0 12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Combos -->
                <ComboBox x:Name="VehicleCombo" Grid.Row="0" Grid.Column="0" Height="32" Margin="0 0 8 8"
                          DisplayMemberPath="Plate" SelectedValuePath="Id"/>
                <ComboBox x:Name="DriverCombo" Grid.Row="0" Grid.Column="1" Height="32" Margin="0 0 8 8"
                          DisplayMemberPath="FullName" SelectedValuePath="Id"/>
                <ComboBox x:Name="CommanderCombo" Grid.Row="0" Grid.Column="2" Height="32" Margin="0 0 8 8"
                          DisplayMemberPath="FullName" SelectedValuePath="Id"/>

                <!-- Dates -->
                <DatePicker x:Name="ExitDate" Grid.Row="1" Grid.Column="0" Height="32" Margin="0 0 8 8"/>
                <DatePicker x:Name="ReturnDate" Grid.Row="1" Grid.Column="1" Height="32" Margin="0 0 8 8"/>

                <!-- Route / Purpose -->
                <TextBox x:Name="RouteBox" Grid.Row="2" Grid.Column="0" Height="32" Margin="0 0 8 0"
                         VerticalContentAlignment="Center" />
                <TextBox x:Name="PurposeBox" Grid.Row="2" Grid.Column="1" Height="32" Margin="0 0 8 0"
                         VerticalContentAlignment="Center" />

                <!-- Km + Desc -->
                <StackPanel Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Orientation="Horizontal" Margin="0 0 8 0">
                    <TextBox x:Name="StartKmBox" Width="100" Height="32" Margin="0 0 8 0"
                             VerticalContentAlignment="Center"/>
                    <TextBox x:Name="EndKmBox" Width="100" Height="32"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <TextBox x:Name="DescBox" Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Height="72"
                         TextWrapping="Wrap" AcceptsReturn="True" Margin="0 0 0 8"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Kaydet" Width="120" Height="32" Margin="0 0 8 0"
                            Click="SaveMovement_Click"/>
                    <Button Content="Yenile" Width="120" Height="32"
                            Click="RefreshMovements_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GRID -->
        <DataGrid x:Name="MovementsGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"/>
    </Grid>
</UserControl>
