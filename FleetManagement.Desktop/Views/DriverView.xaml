<UserControl x:Class="FleetManagement.Desktop.Views.DriverView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 12">
            <TextBox x:Name="FullNameBox" Width="280" Height="32" Margin="0 0 8 0"
                     VerticalContentAlignment="Center" />
            <TextBox x:Name="PhoneBox" Width="180" Height="32" Margin="0 0 8 0"
                     VerticalContentAlignment="Center" />
            <Button Content="Kaydet" Width="120" Height="32" Click="Save_Click"/>
            <Button Content="Yenile" Width="120" Height="32" Margin="8 0 0 0" Click="Refresh_Click"/>
        </StackPanel>

        <DataGrid x:Name="DriversGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Ad Soyad" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding PhoneNumber}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
