<Window x:Class="FleetManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oto Sevk Programı" Width="1200" Height="720"
        Background="#F3F5F9">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="290"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="#0B1B3A" Padding="12">
            <DockPanel LastChildFill="True">

                <!-- APP TITLE -->
                <TextBlock DockPanel.Dock="Top"
                           Text="Oto Sevk Programı"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="6,6,6,14"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- 1) Ana Sayfa -->
                        <Button Style="{DynamicResource MenuButtonStyle}"
                                Content="Ana Sayfa"
                                Tag="HomePage"
                                Click="Menu_Click"/>

                        <!-- 2) Faaliyet/Raporlar -->
                        <Expander Header="Faaliyet/Raporlar"
                                  Style="{DynamicResource MenuExpanderStyle}"
                                  IsExpanded="True">
                            <StackPanel>
                                <Button Style="{DynamicResource SubMenuButtonStyle}"
                                        Content="Araç Sevk Hazırla"
                                        Tag="VehicleDispatchPreparePage"
                                        Click="Menu_Click"/>

                                <Button Style="{DynamicResource SubMenuButtonStyle}"
                                        Content="Sorgula"
                                        Tag="QueriesPage"
                                        Click="Menu_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- 3) Tanımlamalar -->
                        <Expander Header="Tanımlamalar"
                                  Style="{DynamicResource MenuExpanderStyle}"
                                  IsExpanded="True">
                            <StackPanel>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Araç" Tag="VehiclesPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Sürücü" Tag="DriversPage" Click="Menu_Click"/>

                                <!-- Bakım-Birlik (Unit) -->
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Bakım-Birlik (Unit)" Tag="UnitsPage" Click="Menu_Click"/>

                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Marka" Tag="BrandsPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Model" Tag="ModelsPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Araç Yılı" Tag="VehicleYearsPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Güzergah (Rota-Route)" Tag="RoutesPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Araç Komutanı" Tag="CommandersPage" Click="Menu_Click"/>
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Makam" Tag="MakamsPage" Click="Menu_Click"/>

                                <!-- Araç Muhafızı (henüz yok -> DefaultPage) -->
                                <Button Style="{DynamicResource SubMenuButtonStyle}"
                                        Content="Araç Muhafızı"
                                        Tag="DefaultPage"
                                        Click="Menu_Click"/>
                            </StackPanel>
                        </Expander>

                        <!-- 4) Yardım -->
                        <Button Style="{DynamicResource MenuButtonStyle}"
                                Content="Yardım"
                                Tag="HelpPage"
                                Click="Menu_Click"/>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Column="1" Background="White" Margin="12" CornerRadius="14" Padding="0">
            <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        </Border>

        <!-- STYLES -->
        <Grid.Resources>

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#122B57"/>
                <Setter Property="BorderBrush" Value="#243E70"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#193B74"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#0F2346"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SubMenuButtonStyle" TargetType="Button" BasedOn="{StaticResource MenuButtonStyle}">
                <Setter Property="Margin" Value="12,4,4,4"/>
                <Setter Property="Background" Value="#0F2346"/>
                <Setter Property="BorderBrush" Value="#1E3766"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <Style x:Key="MenuExpanderStyle" TargetType="Expander">
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#0B1B3A"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Expander">
                            <StackPanel>
                                <Border Background="#0B1B3A" CornerRadius="10" BorderBrush="#243E70" BorderThickness="1">
                                    <ToggleButton IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="#122B57"
                                                  BorderBrush="{x:Null}"
                                                  Foreground="White"
                                                  Padding="12,10"
                                                  HorizontalContentAlignment="Left"
                                                  Cursor="Hand">
                                        <ContentPresenter ContentSource="Header"/>
                                    </ToggleButton>
                                </Border>

                                <Border Margin="0,6,0,0">
                                    <ContentPresenter x:Name="ExpandSite"/>
                                </Border>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded" Value="False">
                                    <Setter TargetName="ExpandSite" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </Grid.Resources>

    </Grid>
</Window>