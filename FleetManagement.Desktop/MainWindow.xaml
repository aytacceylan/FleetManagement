<Window x:Class="FleetManagement.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FleetManage" Height="720" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SOL MENÜ -->
        <Border Grid.Column="0" Background="#1E1E1E">
            <StackPanel Margin="12">
                <TextBlock Text="FleetManage" Foreground="White" FontSize="20" Margin="4 8 4 16"/>

                <Button Content="Dashboard" Margin="0 0 0 8"
                        Command="{Binding ShowDashboardCommand}"/>
                <Button Content="Sürücüler" Margin="0 0 0 8"
                        Command="{Binding ShowDriversCommand}"/>
                <Button Content="Araç Hareketi" Margin="0 0 0 8"
                        Command="{Binding ShowMovementsCommand}"/>
            </StackPanel>
        </Border>

        <!-- İÇERİK -->
        <Border Grid.Column="1" Background="#F5F5F5" Padding="16">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>