<Application x:Class="FleetManagement.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Lacivert palet -->
            <Color x:Key="Navy900">#0B1F3B</Color>
            <Color x:Key="Navy800">#102A52</Color>
            <Color x:Key="Navy700">#163764</Color>
            <Color x:Key="Navy600">#1D4476</Color>

            <Color x:Key="AccentBlue">#3B82F6</Color>
            <Color x:Key="DangerRed">#EF4444</Color>
            <Color x:Key="SuccessGreen">#22C55E</Color>

            <SolidColorBrush x:Key="BrushNavy900" Color="{StaticResource Navy900}" />
            <SolidColorBrush x:Key="BrushNavy800" Color="{StaticResource Navy800}" />
            <SolidColorBrush x:Key="BrushNavy700" Color="{StaticResource Navy700}" />
            <SolidColorBrush x:Key="BrushNavy600" Color="{StaticResource Navy600}" />

            <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource AccentBlue}" />
            <SolidColorBrush x:Key="BrushDanger" Color="{StaticResource DangerRed}" />
            <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource SuccessGreen}" />

            <!-- Genel arkaplan / kart -->
            <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource Navy900}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Navy800}" />
            <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource Navy700}" />

            <!-- Yazı -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF" />
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#C7D2FE" />
            <SolidColorBrush x:Key="BorderBrush" Color="#223A66" />

            <!-- Basit card stili -->
            <Style TargetType="Border" x:Key="CardBorder">
                <Setter Property="CornerRadius" Value="14"/>
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <!-- TextBox / ComboBox ufak modernleşme -->
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10,6"/>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="10,6"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            </Style>

            <Style TargetType="Window">
                <Setter Property="Background" Value="{StaticResource AppBackgroundBrush}"/>
            </Style>

            <!-- Sidebar: normal -->
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="0,6"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Background" Value="{StaticResource BrushNavy800}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Sol accent çizgi (normalde görünmez) -->
                                <Border x:Name="Accent"
                            Width="4"
                            HorizontalAlignment="Left"
                            CornerRadius="2"
                            Background="{StaticResource BrushAccent}"
                            Opacity="0"/>

                                <Border x:Name="Root"
                            Margin="0"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10">
                                    <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="{StaticResource BrushNavy700}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Root" Property="Background" Value="{StaticResource BrushNavy600}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.55"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Sidebar: aktif -->
            <Style x:Key="SidebarButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
                <Setter Property="Background" Value="{StaticResource BrushNavy700}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BrushAccent}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- Ana Sayfa / Kart Başlığı -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>

            <!-- Alt Açıklama -->
            <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="#9FB3D9"/>
                <!-- soft açık mavi -->
            </Style>

            <!-- Section Başlığı (Liste Başlığı gibi) -->
            <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource BrushAccent}"/>
            </Style>

            <!-- DataGrid genel görünüm -->
            <Style TargetType="DataGrid">
                <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="RowBackground" Value="{StaticResource SurfaceBrush}"/>
                <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceAltBrush}"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="RowHeaderWidth" Value="0"/>
            </Style>

            <!-- DataGrid kolon başlıkları (Id, Sürücü No, ...) -->
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="{StaticResource BrushNavy700}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>

            <!-- Seçili satır görünümü -->
            <Style TargetType="DataGridRow">
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{StaticResource BrushNavy600}"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Application.Resources>



</Application>

